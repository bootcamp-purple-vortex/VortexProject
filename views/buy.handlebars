<div class="row">
  <div class="col-lg-12">
    <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container">
        <!-- Navbar brand -->
        <a class="toyoda-brand" href="/">TOYoda</a>

        <!-- Collapse button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
          aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible content -->
        <div class="collapse navbar-collapse" id="basicExampleNav">
          <!-- Links -->

          <ul class="navbar-nav mr-auto form-inline">

            <li class="text-center">
              <div class="text-center">
                <a class="btn btn-rounded waves-effect" id="sell-button" href="/sell">Sell
                  Your Item</a>
              </div>
            </li>
          </ul>

          <!-- Links -->

          <form class="form-inline">

            <ul class="right navbar-nav nav-flex-icons">

              <li class="nav-item">
                <div class="g-signin2" data-onsuccess="onSignin" style="margin-top: 2px; margin-left: 3px; ">
                </div>
              </li>
            </ul>

          </form>
        </div>
        <!-- Collapsible content -->
      </div>
    </nav>

    <div class="container" id="buy-card">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-cascade narrower mt-6">

            <div class="row">
              <div class="col-md-6">
                <div class='view view-cascade overlay'>
                  <img class="image img-fluid" id='buy-image' src="{{toys.image}}" />
                </div>

              </div>
              <div class="col-md-6">
                <div class='card-body card-body-cascade'>
                  {{!-- <p class"card-text">
                    <strong>ID</strong>: {{toys.id}}</p>
                  <p> --}}
                    <h1 class="card-title" id='buy-title'>{{toys.toysname}}</h1>
                    <hr>
                    <h4 class="card-title">${{toys.price}}</h3>
                      <br>
                      <p class"card-text">
                        <strong>Location</strong>: {{toys.location}}</p>
                      <p class"card-text">
                        <strong>Description:</strong> {{toys.description}}</p>
                      <p class"card-text">
                        <strong>Seller:</strong> {{toys.username}}</p>
                      <a href="/">‚Üê Back To Home</a>
                </div>

              </div>
            </div>

          </div>
        </div>
      </div>
